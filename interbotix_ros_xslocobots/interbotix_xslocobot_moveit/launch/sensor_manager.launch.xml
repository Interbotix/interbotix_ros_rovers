<launch>

  <!-- This file makes it easy to include the settings for sensor managers -->
  <arg name="robot_model" default=""/>
  <arg name="robot_name" default=""/>
  <arg name="use_camera" default=""/>

  <!-- Params for the octomap monitor -->
  <param name="octomap_frame" type="string" value="odom_combined" />
  <param name="octomap_resolution" type="double" value="0.01" />
  <param name="max_range" type="double" value="2.0" />

  <group if="$(arg use_camera)">

    <!-- Params for 3D sensors config -->
    <rosparam command="load" file="$(find interbotix_xslocobot_moveit)/config/sensors_3d.yaml" />

    <!-- Load the robot specific sensor manager; this sets the moveit_sensor_manager ROS parameter -->
    <include file="$(find interbotix_xslocobot_moveit)/launch/xslocobot_moveit_sensor_manager.launch.xml">
      <arg name="robot_model" value="$(arg robot_model)"/>
      <arg name="robot_name" value="$(arg robot_name)"/>
    </include>

  </group>

</launch>
